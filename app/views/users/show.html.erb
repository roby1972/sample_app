<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.admin? ? image_tag("admin.png", alt: "Administartor", width: 35) : image_tag("user.png", alt: "User", width: 35) %>
        <%= @user.name %>
        <% if @user.admin? %>
          <p style="color:red;">Yuo are Adminitrator!!!!</p>        
        <% end %>
      </h1>
    </section>
  </aside>
  
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= will_paginate @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>  
</div>